<div class="container col-5">
    <h1>My tasks</h1>
    <ul>
    <% @tasks.each do |task| %>
        <li>
            <% if task.completed? %>
                <i class="fa-regular fa-square-check"></i>
            <% else %>
                <i class="fa-regular fa-square"></i>
            <% end %>
            <%= link_to task.title, task_path(task) %>
        </li>
    <% end %>
    </ul>

    <%= link_to "   Add a new task", tasks_new_path, class: "fa-solid fa-plus link"  %>
</div>
